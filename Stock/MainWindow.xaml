<Window x:Class="Stock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stock"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized"
        Closing ="Window_Closing">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <Menu DockPanel.Dock ="Top" x:Name="menu" Height="100" VerticalAlignment="Top" Width="262">
                <MenuItem Header = "_Products" Click="MenuItem_Click"/>
                <MenuItem Header = "_Stock" Click="MenuItem_Click_1"/>
                <MenuItem Header = "_Report" Click="MenuItem_Click_2">
                    <MenuItem Header="_Product List"/>
                    <MenuItem Header="_Stock List"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
